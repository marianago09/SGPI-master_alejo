
@{
    ViewData["Title"] = "ReporteCoordinador";
    Layout = "_LayoutCOORDINADOR";
}

<div class="container">
    <div class="row">
        <div class="col">
            <h1 class="display-4">Reportes coordinador.</h1>
        </div>
        <div class="col">
            <br />
            <a href="/Administrador/Login"><h4 class="text-right">Cerrar sesión.</h4></a>
        </div>
    </div>
</div>

<section class="text-center">
    <!-- Background image -->
    <div class="p-5 bg-image" style="
        background-image: url('');
        height: 100px;
  "></div>

    <center><div class="container card mx-4 mx-md-5 shadow-5-strong" style="
        position: relative;
        bottom: 25px;
        background:#343A40;
        backdrop-filter: blur(30px);
        ">
        <form>



            <div class="row">
                <div class="col-md-4 mb-4">
                    <div class="form-outline">
                        <label class="form-label text-white" for="selectdocumento">Seleccione su tipo de documento:</label> <br />
