                            <option value="extranjeria">Cédula de extranjería.</option>
                            <option value="identidad">Tarjeta de identidad.</option>
                            <option value="pasaporte">Pasaporte.</option>
                        </select>
                    </div>
                    <br />
                </div>



                <!-- INICIO DE LOS CAMPOS -->
                <div class="col-md-4 mb-4">
                    <div class="form-outline">
                        <br />
                    </div>
                    <br />
                </div>
                <!-- ACABAN LOS CAMPOS -->





                <div class="col-md-4 mb-4">
                    <div class="form-outline">
                        <label class="form-label text-white" for="documentotxt">Número de documento</label> <br />
                        <input type="text" id="documentotxt" class="form-control" required />
                    </div>
                    <br />
                </div>
            </div>
        </form>

        <center>
            <table class="table table-bordered table-striped" style="background-color: white">
                <br />
                <tr>
                    <td>Nombre</td>
                    <td>Primer Apellido</td>
                    <td>Segundo Apellido</td>
                    <td>Género</td>
                    <td>Programa</td>
                    <td>Rol</td>
                    <td>Correo</td>
                </tr>

                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
            </table>
        </center>


    </div> <br /></center>

    <button class="btn btn-lg px-5 text-white" type="submit" style="background-color:#343A40">Generar reporte</button>

</section>