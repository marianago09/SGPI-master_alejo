
@{
    ViewData["Title"] = "Recuperar contraseña";
}

    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <div class="mb-md-5 mt-md-4 pb-5">

                            <h2 class="fw-bold mb-4 text-uppercase">Recuperación de contraseña.</h2>

                            <div class="form-outline form-white mb-4">
                                <label class="form-label" for="olvidarcontraseñausuariotxt">Usuario</label>
                                <input type="text" id="olvidarcontraseñausuariotxt" class="form-control form-control-lg" required />
                            </div>

                            <div class="form-outline form-white mb-4">
                                <label class="form-label" for="olvidarcontraseñacorreotxt">Correo electrónico</label>
                                <input type="email" id="olvidarcontraseñacorreotxt" class="form-control form-control-lg" required />
                            </div>
                                                     
                            <button class="btn btn-outline-light btn-lg px-5" type="submit">Enviar</button>
                            <a href="/Administrador/Login"><button class="btn btn-outline-light btn-lg px-5" type="submit">Volver</button></a>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>





