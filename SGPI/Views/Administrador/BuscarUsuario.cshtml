@model SGPI.Models.Usuario

@{
    ViewData["Title"] = "Buscar Usuario";
    Layout = "_LayoutADMINISTRADOR";
}

<div class="container">
    <div class="row">
        <div class="col">
            <h1 class="display-4">Buscar usuario.</h1>
        </div>
        <div class="col">
            <br />
            <a href="/Administrador/Login"><h4 class="text-right">Cerrar sesión.</h4></a>
        </div>
    </div>
</div>

<form method="post">

    <section class="text-center">
        <!-- Background image -->
        <div class="p-5 bg-image" style="
            background-image: url('');
            height: 100px;
      "></div>

       <center><div class="container card mx-4 mx-md-5 shadow-5-strong" style="
            position: relative;
            bottom: 25px;
            background:#343A40;
            backdrop-filter: blur(30px);
            ">


            <div class="row">
                <div class="col-md-4 mb-4">
                    <div class="form-outline">
                         <br />
                        </select>
                    </div>
                    <br />
                </div>



                <!-- INICIO DE LOS CAMPOS -->
                <div class="col-md-4 mb-4">
                    <div class="form-outline">
                        <label class="form-label text-white" for="buscarusuariotxt">Buscar usuario:</label> <br />
                        <input asp-for="NumeroDocumento" type="search" id="buscarusuariotxt" class="form-control" required />
                    </div>
                    <br />
                </div>
                <!-- ACABAN LOS CAMPOS -->





                <div class="col-md-4 mb-4">
                    <div class="form-outline">
                        <br />
                        </select>
                    </div>
                    <br />
                </div>
                </div>
       

    </div> <br /></center>

     @if (Model != null)
    {
        <table class="table table-bordered table-striped" style="background-color: white">
            <thead>

                <tr>
                    <th>@Html.DisplayNameFor(model=>model.NumeroDocumento)</th>
                    <th>@Html.DisplayNameFor(model=>model.PrimerNombre)</th>
                    <th>@Html.DisplayNameFor(model=>model.SegundoNombre)</th>
                    <th>@Html.DisplayNameFor(model=>model.PrimerApellido)</th>
                    <th>@Html.DisplayNameFor(model=>model.SegundoApellido)</th>
                    <th>@Html.DisplayNameFor(model=>model.Email)</th>
                </tr>

            </thead>

            <tbody>

                <tr>
                    <td>@Html.DisplayFor(modelitem => modelitem.NumeroDocumento)</td>
                    <td>@Html.DisplayFor(modelitem => modelitem.PrimerNombre)</td>
                    <td>@Html.DisplayFor(modelitem => modelitem.SegundoNombre)</td>
                    <td>@Html.DisplayFor(modelitem => modelitem.PrimerApellido)</td>
                    <td>@Html.DisplayFor(modelitem => modelitem.SegundoApellido)</td>
                    <td>@Html.DisplayFor(modelitem => modelitem.Email)</td>
                    <td>@Html.ActionLink("EditarUsuario", "EditarUsuario", new {IdUsuario = Model.IdUsuario})</td>
                    <td>@Html.ActionLink("EliminarUsuario", "EliminarUsuario", new {IdUsuario = Model.IdUsuario}, new {onclick = "return confirm('¿Estás seguro de eliminarlo?')"})</td>
                </tr>

            </tbody>
        </table>
    }

    <button class="btn btn-lg px-5 text-white" type="submit" style="background-color:#343A40">Buscar usuario</button>

</section>

</form>


                    

                    